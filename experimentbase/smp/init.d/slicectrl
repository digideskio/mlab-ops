#!/bin/bash

### BEGIN INIT INFO
# Provides:          slicectrl
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Control M-Lab slices
# Description:       SliceCTRL is a management stub for stream-lining 
#                    the tasks for M-Lab slice management.
### END INIT INFO

COMMAND="$1"
shift

source /etc/init.d/slicectrl-functions

PATH=$PATH:/sbin:/bin:/usr/sbin:/usr/bin

function restart() {
    stop
    start
}

function stop () {
    echo "stopping" 
    stop_slice
    stop_manager
}

function start () {
    echo "starting"
    start_slice
    start_manager
}

function status () {
    echo "status "
    status_slice
}

case $COMMAND in
    restart)
        restart
    ;;
    start)
        start
    ;;
    stop)
        stop
    ;;
    status)
        status
    ;;
    install)
        
    ;;
    update)
    ;;

    verify)
    ;;
    register)
        # ping ks.* or mlc.*
    ;;
    unregister)
        # ping ks.* or mlc.*
        # this is going to be best effort.
    ;;
    cleandisk)
    ;;
esac
